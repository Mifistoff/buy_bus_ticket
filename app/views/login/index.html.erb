<%= form_tag("/login", method: "post") do %>
    <%= label_tag(:login, 'Логін') %>
    <%= text_field_tag(:login) %>
    <%= label_tag(:password, 'Пароль') %>
    <%= password_field_tag(:password) %>
    <%= submit_tag('Увійти') %>
<% end %>
<% if flash[:notice] %>
<div><%= flash[:notice] %></div>
<% end %>